{
  "name": "fixit-api",
  "version": "1.16.0",
  "description": "Fixit API services built on NodeJS and Apollo GraphQL.",
  "author": {
    "name": "Trevor Anderson",
    "email": "Trevor@Nerdware.cloud"
  },
  "license": "LicenseRef-LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nerdware-LLC/fixit-api.git"
  },
  "private": "true",
  "homepage": "https://github.com/Nerdware-LLC/fixit-api#readme",
  "bugs": {
    "url": "https://github.com/Nerdware-LLC/fixit-api/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "start": "npm run ddb:forceNew ; nodemon ./src/index.ts dotenv_config_path=./src/server/.dev.env",
    "start:prod": "node --no-warnings --loader ./build/loader.js ./build/index.js",
    "compose:up": "docker compose --file ./docker/docker-compose.yaml --project-directory . up",
    "build": "rm -rf ./build 2>/dev/null && tsc --project tsconfig.build.json",
    "ddb:start": "docker run -d -p 8000:8000 --rm --name fixit-api-ddb-local amazon/dynamodb-local 1>/dev/null",
    "ddb:kill": "docker container kill fixit-api-ddb-local &>/dev/null",
    "ddb:forceNew": "npm run ddb:kill ; npm run ddb:start",
    "test": "npm run ddb:forceNew ; NODE_OPTIONS='--experimental-vm-modules --no-warnings' DOTENV_CONFIG_PATH=./src/server/.test.env jest",
    "test:watch": "npm run test -- --watch ;        # Re-run tests when associated files change",
    "rover:publish-schema-update": "rover graph introspect http://localhost:8080/api | rover graph publish fixit@current --schema -",
    "rover:fetch": "rover graph fetch fixit@current > fixit@current.graphql",
    "gql:codegen": "graphql-codegen --config codegen.yaml",
    "gql:update-types": "npm run rover:fetch && npm run gql:codegen"
  },
  "dependencies": {
    "@apollo/server": "^4.0.5",
    "@aws-sdk/client-dynamodb": "^3.186.0",
    "@aws-sdk/client-lambda": "^3.186.0",
    "@aws-sdk/lib-dynamodb": "^3.186.0",
    "@sentry/node": "^7.15.0",
    "@sentry/tracing": "^7.15.0",
    "@types/lodash.merge": "^4.6.7",
    "@types/module-alias": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash.merge": "^4.6.2",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "stripe": "^10.7.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.11",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typescript": "2.8.1",
    "@graphql-codegen/typescript-resolvers": "2.7.6",
    "@jest/types": "^29.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.14",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.21.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.2"
  },
  "_moduleAliases": {
    "@": "build/",
    "@events": "build/events",
    "@graphql": "build/graphql",
    "@lib": "build/lib",
    "@middleware": "build/middleware",
    "@models": "build/models",
    "@server": "build/server",
    "@utils": "build/utils"
  }
}
